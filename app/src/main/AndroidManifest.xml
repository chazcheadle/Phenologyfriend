<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.catrock.phenologyfriend" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.catrock.phenologyfriend.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.catrock.phenologyfriend.AddNewRecordActivity"
            android:label="@string/title_activity_add_new_record" >
        </activity>
        <activity
            android:name="com.catrock.phenologyfriend.AddObservationPlantActivity"
            android:label="@string/title_activity_add_observation_plant" >
        </activity>
        <activity
            android:name="com.catrock.phenologyfriend.AddObservationAnimalActivity"
            android:label="@string/title_activity_add_observation_animal" >
        </activity>
        <activity
            android:name="com.catrock.phenologyfriend.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.catrock.phenologyfriend.AboutActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>
