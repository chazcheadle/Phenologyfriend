<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.catrock.phenologyfriend.SettingsActivity">

    <TextView android:text="@string/settings_page_title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settingsPageTitleText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/settings_page_body"
        android:id="@+id/settingsPageBodyText"
        android:layout_below="@+id/settingsPageTitleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settingsPageWUAPILinearLayout"
        android:layout_below="@+id/settingsPageBodyText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp">

        <TextView android:text="@string/settings_page_wuapi_text" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/settingsPageWUAPIText" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/settingsPageWUAPIText"
            android:id="@+id/settingsPageWUAPIEditText"
            android:layout_weight="1"
            android:hint="@string/settings_page_wuapi_hint"
            android:inputType="text"
            android:contentDescription="Desc" />
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settingsPageUpdateButton"
        android:id="@+id/settingsPageUpdateButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
